<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <!-- Ajouter TextView pour afficher les résultats des calculs -->
    <TextView
        android:id="@+id/textViewLeftAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewDialog"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewRightAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLeftAngle"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewConvergenceAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRightAngle"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <!-- Ajouter d'autres éléments de mise en page ou un bouton de fermeture si nécessaire -->

</RelativeLayout>
